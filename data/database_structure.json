  "queries": {
    "get_product_by_code": "SELECT CÓDIGO as codigo, NOME as nome, FABRICANTE as fabricante, EMBALAGEM as embalagem, [PREÇO 38%] as preco, CATEGORIA as categoria, GRUPO as grupo, SUBGRUPO as subgrupo, [EST# UNE] as estoque, ULTIMA_VENDA as ultima_venda FROM dbo.Admat_OPCOM WHERE CÓDIGO = ?",
    "get_product_by_name": "SELECT TOP 5 CÓDIGO as codigo, NOME as nome, FABRICANTE as fabricante, EMBALAGEM as embalagem, [PREÇO 38%] as preco, CATEGORIA as categoria, GRUPO as grupo, SUBGRUPO as subgrupo, [EST# UNE] as estoque, ULTIMA_VENDA as ultima_venda FROM dbo.Admat_OPCOM WHERE NOME LIKE ? ORDER BY [VEND# QTD 30D] DESC",
    "get_products_by_category": "SELECT TOP 10 CÓDIGO as codigo, NOME as nome, [PREÇO 38%] as preco, [VEND# QTD 30D] as vendas_30d FROM dbo.Admat_OPCOM WHERE CATEGORIA = ? ORDER BY [VEND# QTD 30D] DESC",
    "get_top_selling_products": "SELECT TOP 10 CÓDIGO as codigo, NOME as nome, [VEND# QTD 30D] as vendas_30d, [PREÇO 38%] as preco FROM dbo.Admat_OPCOM ORDER BY [VEND# QTD 30D] DESC",
    "get_product_sales_history": "SELECT CÓDIGO as codigo, NOME as nome, [mai-23] as mai23, [jun-23] as jun23, [jul-23] as jul23, [ago-23] as ago23, [set-23] as set23, [out-23] as out23, [nov-23] as nov23, [dez-23] as dez23, [jan-24] as jan24, [fev-24] as fev24, [mar-24] as mar24, [abr-24] as abr24, [mai/24] as mai24 FROM dbo.Admat_OPCOM WHERE CÓDIGO = ?"
  }
